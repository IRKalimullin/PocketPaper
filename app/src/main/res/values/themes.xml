<resources>

    <style name="Theme.PocketPaper" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/window_background_light_mode</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="window_background_color_attr">@color/window_background_light_mode</item>
        <item name="item_background_color_attr">@color/white</item>
        <item name="text_color_attr">@color/black</item>
        <item name="button_color_attr">@color/black</item>
        <item name="navigation_bar_background_color_attr">@color/window_background_light_mode</item>
        <item name="alertDialogTheme">@style/custom_alert_dialog</item>
    </style>

    <style name="bottom_sheet_dialog_style" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/modal_sheet_style</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="modal_sheet_style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_shape_bottom_sheet_dialog</item>
    </style>

    <style name="custom_checkbox_style">
        <item name="colorControlNormal">?attr/text_color_attr</item>
        <item name="colorControlActivated">@color/green</item>
    </style>


    <style name="custom_alert_dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">?attr/text_color_attr</item>
        <item name="android:textColorPrimary">?attr/text_color_attr</item>
        <item name="android:dialogMessage">?attr/text_color_attr</item>
        <item name="android:windowBackground">@drawable/custom_layout_shape</item>
        <item name="buttonBarPositiveButtonStyle">@style/dialog_text_style</item>
        <item name="buttonBarNegativeButtonStyle">@style/dialog_text_style</item>
    </style>

    <style name="message_text_color">
        <item name="android:textColor">?attr/text_color_attr</item>
    </style>

    <style name="custom_spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:foreground">?attr/text_color_attr</item>
    </style>

    <style name="dialog_text_style">
        <item name="android:textColor">?attr/text_color_attr</item>
    </style>
</resources>