<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="habit"
            type="com.baleshapp.pocketpaper.data.model.Habit" />
        <variable
            name="dialog"
            type="com.baleshapp.pocketpaper.view.habit.dialog.NewHabitDialog" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_shape_bottom_sheet_dialog"
        android:paddingHorizontal="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_notes_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="4"
                android:text="@string/new_habit"
                android:textColor="?attr/text_color_attr"
                android:textSize="22sp" />

            <ImageButton
                android:onClick="@{() -> dialog.saveHabit()}"
                android:id="@+id/save_note_button_bottom_sheet"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_done_24"
                app:tint="?attr/button_color_attr"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <EditText
            android:id="@+id/habit_input_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="@string/name_hint"
            android:importantForAutofill="no"
            android:inputType="textNoSuggestions|textCapSentences"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            android:text="@={habit.name}"
            android:textColor="?attr/text_color_attr"
            android:textColorHint="@color/light_grey"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/note_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/description"
            android:importantForAutofill="no"
            android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
            android:minHeight="120dp"
            android:padding="8dp"
            android:text="@={habit.description}"
            android:textAlignment="gravity"
            android:textColor="?attr/text_color_attr"
            android:textColorHint="@color/light_grey"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_weight="6"
                android:text="@string/start_date"
                android:textColor="?attr/text_color_attr"
                android:textSize="18sp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{dialog.startDateText}"
                android:onClick="@{() -> dialog.createDateDialog()}"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:checkable="false"
                app:chipBackgroundColor="@color/green"
                app:chipMinTouchTargetSize="0dp"
                />

        </LinearLayout>

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

    </LinearLayout>
</layout>