<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="task"
            type="com.baleshapp.pocketpaper.data.model.Task" />

        <variable
            name="viewHolder"
            type="com.baleshapp.pocketpaper.view.task.adapters.TaskAdapter.TaskViewHolder" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:id="@+id/task_item_container"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginVertical="3dp"
        android:layout_marginHorizontal="3dp"
        android:elevation="3dp"
        android:orientation="vertical"
        style="@style/task_item_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/task_check_box"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="top|center_vertical"
                android:checked="@{task.done}"
                android:gravity="center_vertical|center_horizontal"
                android:onCheckedChanged="@{(compoundButton, checked) -> viewHolder.saveCheckedState(checked)}"
                android:theme="@style/custom_checkbox_style" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/task_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:minHeight="36dp"
                    android:onLongClick="@{() -> viewHolder.onLongClick()}"
                    android:text="@{task.name}"
                    android:textColor="?attr/text_color_attr"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="start|top"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_baseline_date_range_24"
                        app:tint="?attr/button_color_attr" />

                    <TextView
                        android:id="@+id/task_date"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginStart="4dp"
                        android:background="@android:color/transparent"
                        android:text="@{viewHolder.getDateString(task)}"
                        android:textColor="?attr/text_color_attr"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_baseline_access_time_24"
                        app:tint="?attr/button_color_attr" />

                    <TextView
                        android:id="@+id/task_time"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginStart="4dp"
                        android:background="@android:color/transparent"
                        android:text="@{viewHolder.getTimeString(task)}"
                        android:textColor="?attr/text_color_attr"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.chip.Chip
                android:id="@+id/task_tag_chip"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp"
                android:checkable="false"
                android:text="@{viewHolder.tagText}"
                app:chipMinTouchTargetSize="0dp" />
        </RelativeLayout>


    </LinearLayout>


</layout>