<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="task"
            type="com.baleshapp.pocketpaper.data.model.Task" />

        <variable
            name="viewHolder"
            type="com.baleshapp.pocketpaper.view.task.adapters.TaskAdapter.TaskViewHolder" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/task_check_box"
            android:layout_width="36dp"
            android:layout_height="48dp"
            android:checked="@{task.done}"
            android:gravity="center_vertical|center_horizontal"
            android:onCheckedChanged="@{(compoundButton, checked) -> viewHolder.saveCheckedState(compoundButton, checked)}"
            android:theme="@style/custom_checkbox_style" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:background="?attr/text_color_attr"
                android:visibility="@{task.done ? View.VISIBLE : View.GONE}"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/task_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:onLongClick="@{() -> viewHolder.onLongClick()}"
                android:text="@{task.name}"
                android:textColor="?attr/text_color_attr"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/task_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@{viewHolder.getDateString(task)}"
                android:textColor="?attr/text_color_attr"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/task_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@{viewHolder.getTimeString(task)}"
                android:textColor="?attr/text_color_attr"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</layout>