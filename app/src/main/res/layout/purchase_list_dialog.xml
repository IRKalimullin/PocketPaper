<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="list"
            type="com.baleshapp.pocketpaper.data.model.PurchaseList" />

        <variable
            name="item"
            type="com.baleshapp.pocketpaper.data.model.PurchaseItem" />

        <variable
            name="dialog"
            type="com.baleshapp.pocketpaper.view.purchase.dialogs.PurchaseListDialog" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_layout_shape"
        android:orientation="vertical">

        <EditText
            android:id="@+id/list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/transparent"
            android:importantForAutofill="no"
            android:inputType="textCapSentences"
            android:text="@{list.name}"
            android:textColor="?attr/text_color_attr"
            android:textSize="22sp"
            tools:ignore="LabelFor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/purchases_items_add_line_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true"
                android:hint="@string/add_new_item_hint"
                android:importantForAutofill="no"
                android:inputType="textNoSuggestions|textPersonName"
                android:paddingStart="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="0dp"
                android:paddingBottom="10dp"
                android:text="@={item.name}"
                android:textColor="?attr/text_color_attr"
                android:textColorHint="@color/light_grey"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="-2dp"
                android:layout_weight="2.3"
                android:backgroundTint="@android:color/transparent"
                android:importantForAutofill="no"
                android:inputType="textNoSuggestions"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:text="@={dialog.numberText}"
                android:textColor="?attr/text_color_attr"
                android:textColorHint="@color/light_grey"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/purchases_items_add_line_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="-10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="2.4"
                android:contentDescription="@string/save_item_button_description"
                android:onClick="@{() -> dialog.saveItem()}"
                android:padding="15dp"
                android:src="@drawable/ic_baseline_done_24"
                app:tint="?attr/button_color_attr" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/purchase_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="12dp"
            android:elevation="2dp"
            android:paddingStart="4dp"
            android:paddingEnd="8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


    </LinearLayout>

</layout>