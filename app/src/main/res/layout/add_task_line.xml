<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="task"
            type="com.baleshapp.pocketpaper.data.model.Task" />

        <variable
            name="dialog"
            type="com.baleshapp.pocketpaper.view.task.dialogs.NewTaskDialog" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_shape_bottom_sheet_dialog"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="?attr/window_background_color_attr" />

        <LinearLayout
            android:id="@+id/add_task_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <LinearLayout
                android:id="@+id/date_picker_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/layout_stroke_out"
                android:onClick="@{() -> dialog.createDateDialog()}"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageButton
                    android:id="@+id/attach_date_to_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_date_range_24"
                    app:tint="?attr/button_color_attr" />

                <TextView
                    android:id="@+id/date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:gravity="center"
                    android:text="@{dialog.dateText}"
                    android:textColor="?attr/text_color_attr"
                    android:textSize="16sp"
                    tools:text="Date" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_picker_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="3dp"
                android:background="@drawable/layout_stroke_out"
                android:onClick="@{() -> dialog.createTimeDialog()}"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageButton
                    android:id="@+id/attach_time_to_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_access_time_24"
                    app:tint="?attr/button_color_attr" />

                <TextView
                    android:id="@+id/time_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:gravity="center"
                    android:text="@{dialog.timeText}"
                    android:textColor="?attr/text_color_attr"
                    android:textSize="16sp"
                    tools:text="Время" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp">

            <EditText
                android:id="@+id/task_add_input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Новая задача"
                android:inputType="textCapSentences|textNoSuggestions"
                android:minHeight="60dp"
                android:text="@={task.name}"
                android:textColor="?attr/text_color_attr"
                android:textColorHint="@color/light_grey" />

            <ImageButton
                android:id="@+id/send_task_to_list"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:onClick="@{() -> dialog.saveTask()}"
                android:src="@drawable/ic_baseline_send_24"
                app:tint="?attr/button_color_attr" />
        </LinearLayout>
    </LinearLayout>

</layout>