<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.baleshapp.pocketpaper.view.calendarpage.CalendarFragment" />

        <import type="com.prolificinteractive.materialcalendarview.CalendarMode" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.calendarpage.CalendarFragment">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/tasks_calendar_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:switchTextAppearance="@style/calendar_text_appearance"
            android:visibility="visible"
            app:mcv_calendarMode="week"
            app:mcv_dateTextAppearance="@style/calendar_text_appearance"
            app:mcv_headerTextAppearance="@style/calendar_text_appearance"
            app:mcv_selectionColor="@color/green"
            app:mcv_showOtherDates="out_of_range"
            app:mcv_weekDayTextAppearance="@style/calendar_text_appearance" />

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/tasks_calendar_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:switchTextAppearance="@style/calendar_text_appearance"
            android:visibility="gone"
            app:mcv_calendarMode="month"
            app:mcv_dateTextAppearance="@style/calendar_text_appearance"
            app:mcv_headerTextAppearance="@style/calendar_text_appearance"
            app:mcv_selectionColor="@color/green"
            app:mcv_showOtherDates="out_of_range"
            app:mcv_weekDayTextAppearance="@style/calendar_text_appearance" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:checkable="false"
                android:onClick="@{() -> fragment.changeCalendarMode()}"
                android:text="@{fragment.open ? @string/collapse : @string/expand}"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/green"
                app:chipIcon="@{fragment.open ? @drawable/ic_baseline_keyboard_arrow_up_24 : @drawable/ic_baseline_keyboard_arrow_down_24}"
                app:chipIconTint="@color/white"
                app:chipMinTouchTargetSize="0dp" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:checkable="false"
                android:onClick="@{() -> fragment.setToday()}"
                android:text="@string/today"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/green"
                app:chipMinTouchTargetSize="0dp"
                tools:ignore="RelativeOverlap" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:background="@drawable/custom_layout_shape"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/tasks_on_date"
                android:textColor="?attr/text_color_attr"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/selected_date_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:elevation="2dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        </LinearLayout>

    </LinearLayout>

</layout>